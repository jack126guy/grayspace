---
import BaseLayout from './BaseLayout.astro';
import HomeSiteId from './HomeSiteId.astro';

interface Props {
	lang: string;
	siteName: string;
	siteLogo?: string;
	favicon?: string;
}

const { lang, siteName, siteLogo, favicon } = Astro.props;
---

<BaseLayout lang={lang} favicon={favicon || siteLogo} title={siteName}>
	<Fragment slot="head">
		<slot name="head" />
	</Fragment>
	<Fragment slot="header">
		<HomeSiteId name={siteName} logo={siteLogo} />
		<slot name="header" />
	</Fragment>
	<slot />
	<Fragment slot="footer">
		<slot name="footer" />
	</Fragment>
</BaseLayout>
