---
import BaseLayout from './BaseLayout.astro';
import HomeSiteId from './HomeSiteId.astro';
import { type SiteInfo } from '../site-info';

interface Props {
	siteInfo: SiteInfo;
}

const {
	siteInfo: { lang, siteName, siteLogo, favicon, skipToMainText },
} = Astro.props;
---

<BaseLayout
	lang={lang}
	favicon={favicon || siteLogo}
	title={siteName}
	skipToMainText={skipToMainText}
>
	<slot slot="head" name="head" />
	<Fragment slot="header">
		<HomeSiteId name={siteName} logo={siteLogo} />
		<slot name="header" />
	</Fragment>
	<slot />
	<slot slot="footer" name="footer" />
</BaseLayout>
