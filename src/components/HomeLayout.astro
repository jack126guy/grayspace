---
import BaseLayout from './BaseLayout.astro';
import HomeSiteId from './HomeSiteId.astro';
import { type SiteInfo } from '../site-info';

interface Props {
	siteInfo: SiteInfo;
}

const {
	siteInfo: { lang, siteName, siteLogo, favicon },
} = Astro.props;
---

<BaseLayout lang={lang} favicon={favicon || siteLogo} title={siteName}>
	<Fragment slot="head">
		<slot name="head" />
	</Fragment>
	<Fragment slot="header">
		<HomeSiteId name={siteName} logo={siteLogo} />
		<slot name="header" />
	</Fragment>
	<slot />
	<Fragment slot="footer">
		<slot name="footer" />
	</Fragment>
</BaseLayout>
