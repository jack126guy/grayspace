---
import BasePage from '../components/BasePage.astro';
import HomeSiteId from '../components/HomeSiteId.astro';
import siteInfo from 'virtual:grayspace/site-info';
import { i18n } from '../i18n';
import 'virtual:grayspace/site-styles';

const currentLocale = Astro.currentLocale;
const { siteName, siteLogo, favicon } = siteInfo;
const skipToMainText = i18n(currentLocale).__('Skip to main content');
---

<BasePage
	lang={currentLocale}
	favicon={favicon || siteLogo}
	title={siteName}
	skipToMainText={skipToMainText}
>
	<slot slot="head" name="head" />
	<Fragment slot="header">
		<HomeSiteId name={siteName} logo={siteLogo} />
		<slot name="header" />
	</Fragment>
	<slot />
	<slot slot="footer" name="footer" />
</BasePage>
