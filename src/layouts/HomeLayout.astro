---
import BaseLayout from './BaseLayout.astro';
import HomeSiteId from '../components/HomeSiteId.astro';
import siteInfo from 'virtual:grayspace/site-info';
import 'virtual:grayspace/site-styles';

const { lang, siteName, siteLogo, favicon, skipToMainText } = siteInfo;
---

<BaseLayout
	lang={lang}
	favicon={favicon || siteLogo}
	title={siteName}
	skipToMainText={skipToMainText}
>
	<slot slot="head" name="head" />
	<Fragment slot="header">
		<HomeSiteId name={siteName} logo={siteLogo} />
		<slot name="header" />
	</Fragment>
	<slot />
	<slot slot="footer" name="footer" />
</BaseLayout>
