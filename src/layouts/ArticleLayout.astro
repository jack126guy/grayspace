---
import GeneralLayout from './GeneralLayout.astro';
import HeadExtra from 'virtual:grayspace/components/HeadExtra';
import Article from 'virtual:grayspace/components/Article';
import GeneralHeader from 'virtual:grayspace/components/GeneralHeader';
import GeneralFooter from 'virtual:grayspace/components/GeneralFooter';
import { type PageInfoProps } from '../page-info';

interface Props extends PageInfoProps {}
---

<GeneralLayout {...Astro.props}>
	<slot slot="head" name="head">
		<HeadExtra />
	</slot>
	<slot slot="header" name="header">
		<GeneralHeader />
	</slot>
	<Article>
		<slot />
	</Article>
	<slot slot="footer" name="footer">
		<GeneralFooter />
	</slot>
</GeneralLayout>
