---
import BasePage from '../components/BasePage.astro';
import HeadExtra from 'virtual:grayspace/components/HeadExtra';
import siteInfo from 'virtual:grayspace/site-info';
import { getI18n, type TextDirection } from '../i18n';
import 'virtual:grayspace/site-styles';

interface Props {
	title: string;
}

const currentLocale = Astro.currentLocale;
const i18n = getI18n(currentLocale);
const { title } = Astro.props;
const { favicon } = siteInfo;
const dir = i18n.t('ltr') as TextDirection;
const skipToMainText = i18n.t('Skip to main content');
---

<BasePage
	lang={currentLocale}
	dir={dir}
	favicon={favicon}
	title={title}
	skipToMainText={skipToMainText}
>
	<slot slot="head" name="head">
		<HeadExtra />
	</slot>
	<slot slot="header" name="header" />
	<slot />
	<slot slot="footer" name="footer" />
</BasePage>
